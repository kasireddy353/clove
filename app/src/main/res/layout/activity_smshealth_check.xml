            <!--android:src="@mipmap/bulb"/>-->
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@mipmap/bulb"
        android:orientation="vertical"
        android:layout_weight="1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Sit Back and relax. We will check the health of SMS Delivery for you!"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/teal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/editText"
                android:textAlignment="center"
                android:hint = "Short Code"
                android:maxLength="6"
                android:textColorHint = "@color/grey"
                android:layout_gravity="center"
                android:inputType="number"
                android:theme="@style/EditTextTheme"
                 />

            <EditText
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/editText1"
                android:textAlignment="center"
                android:hint = "Frequency in minutes"
                android:maxLength="2"
                android:textColorHint = "@color/grey"
                android:layout_gravity="center"
                android:inputType="number"
                android:theme="@style/EditTextTheme"
                />

            <EditText
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:id = "@+id/editText2"
                android:textAlignment="center"
                android:hint = "SLA for message delivery in seconds"
                android:maxLength="2"
                android:textColorHint = "@color/grey"
                android:layout_gravity="center"
                android:inputType="number"
                android:theme="@style/EditTextTheme"
                />

            <!--<Spinner-->
                <!--android:id="@+id/spinner"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
